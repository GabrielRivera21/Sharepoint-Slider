<?xml version="1.0" encoding="utf-8"?>
<Elements xmlns="http://schemas.microsoft.com/sharepoint/">
  <ClientWebPart Name="Gaby Sharepoint Slider" Title="Gaby Sharepoint Slider" 
                 Description="A Carousel Slider App Part, Where you can select an Image Library
                 and modify it's height, width and speed Intervals at which it changes images." 
                 DefaultWidth="300" DefaultHeight="500">

    <!-- Content element identifies the location of the page that will render inside the client web part
         Properties are referenced on the query string using the pattern _propertyName_
         Example: Src="~appWebUrl/Pages/ClientWebPart1.aspx?Property1=_property1_" -->
    <Content Type="html" Src="~appWebUrl/Pages/Gaby_Slider.aspx?ImageLibrary=_ImageLibrary_&amp;SliderInterval=_SliderInterval_&amp;SliderColors=_SliderColors_&amp;{StandardTokens};editmode=_editMode_" />

    <!-- Define properties in the Properties element.
         Remember to put Property Name on the Src attribute of the Content element above. -->
    <Properties>
      <Property
          Name="ImageLibrary"
          Type="string"
          RequiresDesignerPermission="true"
          DefaultValue="ImageLibrary"
          WebCategory="Slider Properties"
          WebDisplayName="Image Library Name">
      </Property>
      <Property
        Name="SliderInterval"
        Type="int"
        RequiresDesignerPermission="true"
        DefaultValue="5000"
        WebCategory="Slider Properties"
        WebDisplayName="Interval for the Slider">
      </Property>
      <Property
        Name="SliderColors"
        Type="enum"
        RequiresDesignerPermission="true"
        DefaultValue="default"
        WebCategory="Slider Properties"
        WebDisplayName="Slider Theme Color">
        <EnumItems>
          <EnumItem WebDisplayName="Default" Value="default"/>
          <EnumItem WebDisplayName="Blue" Value="blue"/>
          <EnumItem WebDisplayName="Green" Value="green"/>
          <EnumItem WebDisplayName="Red" Value="red"/>
          <EnumItem WebDisplayName="Orange" Value="orange"/>
          <EnumItem WebDisplayName="Pink" Value="pink"/>
          <EnumItem WebDisplayName="Light Blue" Value="lightBlue"/>
          <EnumItem WebDisplayName="Light Green" Value="lightGreen"/>
        </EnumItems>
      </Property>
    </Properties>

  </ClientWebPart>
</Elements>
